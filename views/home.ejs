       
            <div class="flex justify-around ">
                <div class="w-3/12 bg-dark">
            
                    <div class="w-full max-w-md p-4 bg-white border border-gray-200 rounded-lg shadow sm:p-8 dark:bg-gray-800 dark:border-gray-700">
                        <div class="flex items-center justify-between mb-4">
                            <h5 class="text-xl font-bold leading-none text-gray-900 dark:text-white">Categories</h5>
                            <button  class="text-white py-1 main-color px-3 rounded-full ">+Category</button>
                           
                       </div>
                       <div class="flow-root">
                            <ul role="list" class="divide-y divide-gray-200 dark:divide-gray-700">
                                <% categories.forEach(category=> { %>
                                <li class="py-3 sm:py-4">
                                    <div class="flex items-center space-x-4">
                                        
                                        <div class="flex-1 min-w-0">
                                            <a  href="" class="text-white py-1 main-color px-24 rounded-full "><%= category.titre %></a>
                                            
                                        </div>
                                        
                                    </div>
                                </li>
                                <% }) %>
                            </ul>
                       </div>
                    </div>
                    
                </div>
                <div class="flex flex-wrap justify-around">
                    <% 
                    if(posts){

                        posts.forEach(post=> { %>
                    
                    <div class="h-fit max-w-sm w-5/12 bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700">
                        <a href="/post/<%= post.id %>">
                            <h5 class="mb-2 py-2 px-3 text-l font-bold tracking-tight text-gray-900 dark:text-white"><%= post.titre %></h5>
                        </a>
                        <a href="/post/<%= post.id %>" class="flex justify-center">
                            <img class="rounded-t-lg w-fit h-fit" src="https://picsum.photos/300" alt="">
                        </a>
                        <div class="p-5">
                            
                            <p class="mb-3 font-normal text-gray-700 dark:text-gray-400"><%= post.contenu.substring(0, 100) %>...</p>
                            <a href="#" class="inline-flex items-center px-3 py-2 text-sm font-medium text-center text-white main-color rounded-lg hover:bg-stone-800 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">
                                Read more
                                <svg class="w-3.5 h-3.5 ml-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
                                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9"></path>
                                </svg>
                            </a>
                        </div>
                    </div>
                    <% }); 
                }else{  %>
                    <h1 class="text-xl font-bold leading-none text-gray-900 dark:text-white">no result</h1>
                    <%
                }
                    %>
                   
            
            
                </div>
            </div>


    



    